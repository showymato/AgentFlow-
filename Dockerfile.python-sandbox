# Python sandbox for secure code execution
FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Python packages for AI/ML workloads
RUN pip install --no-cache-dir \
    numpy \
    pandas \
    scikit-learn \
    matplotlib \
    pillow \
    requests \
    beautifulsoup4 \
    lxml \
    jsonschema \
    pydantic

# Create sandbox user
RUN useradd -m -u 1001 sandbox

# Create sandbox directory
RUN mkdir -p /sandbox && chown sandbox:sandbox /sandbox

# Set resource limits
RUN echo "sandbox soft nproc 100" >> /etc/security/limits.conf
RUN echo "sandbox hard nproc 200" >> /etc/security/limits.conf
RUN echo "sandbox soft nofile 1024" >> /etc/security/limits.conf
RUN echo "sandbox hard nofile 2048" >> /etc/security/limits.conf

USER sandbox
WORKDIR /sandbox

# Default timeout for execution
ENV EXECUTION_TIMEOUT=30

CMD ["python3"]
